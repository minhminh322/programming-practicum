
package model;

import java.util.*;
import model.RaceParticipants;

public class ParticipantsList {
    private static List<RaceParticipants> list;
    private static int size = 0;
    private static List<String> NameList;
    private static List<Integer> IDList;
    private static List<Double> TimeList;

    public ParticipantsList() {
        list = new ArrayList<>();
        IDList = new ArrayList<>();
        NameList = new ArrayList<>();
        TimeList = new ArrayList<>();
    }

    public ParticipantsList(List<RaceParticipants> l) {
        list = l;
    }

    public void add(RaceParticipants p) {
        list.add(p);
        NameList.add(p.getRaceName());
        IDList.add(p.getRaceID());
        TimeList.add(p.getStartDistance());
        size++;
    }

    public int getSize() {
        return size;
    }

    public List<String> getListName() {
        return NameList;
    }

    public List<Integer> getListIds() {
        return IDList;
    }

    public List<Double> getListStart() {
        return TimeList;
    }

}
